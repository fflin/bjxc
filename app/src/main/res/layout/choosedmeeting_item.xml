<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/employee_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlchoose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_widthPercent="7%"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/ivDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvEmployeeName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rlchoose"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_widthPercent="31%"/>
    <TextView
        android:id="@+id/tvEmployeeNo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvEmployeeName"
        android:layout_toEndOf="@+id/tvEmployeeName"
        app:layout_widthPercent="31%"/>
    <TextView
        android:id="@+id/tvEmployeeType"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvEmployeeNo"
        android:layout_toEndOf="@+id/tvEmployeeNo"
        app:layout_widthPercent="31%"/>

</com.zhy.android.percent.support.PercentRelativeLayout>