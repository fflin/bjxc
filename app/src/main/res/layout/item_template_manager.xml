<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="#ffffff">
    <TextView
        android:id="@+id/tvItemNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="5%"
        android:text="1"
        android:gravity="center"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tvItemMeetingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvItemNum"
        app:layout_widthPercent="25%"
        android:text="武汉研发中心技术讨论"
        android:gravity="center"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tvItemMeetingNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvItemMeetingName"
        app:layout_widthPercent="10%"
        android:text="136888888"
        android:gravity="center"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tvItemMeetingType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvItemMeetingNo"
        app:layout_widthPercent="10%"
        android:text="宣讲会议"
        android:gravity="center"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tvItemMeetingLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvItemMeetingType"
        app:layout_widthPercent="10%"
        android:text="即时会议"
        android:gravity="center"
        android:layout_centerVertical="true"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvItemMeetingLevel"
        app:layout_widthPercent="40%">
        <TextView
            android:id="@+id/tvItemMeetingUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_template_update_bt"
            app:layout_widthPercent="15%"
            android:singleLine="true"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tvItemMeetingSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvItemMeetingUpdate"
            android:background="@drawable/bg_template_setting_bt"
            app:layout_widthPercent="20%"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:id="@+id/tvItemMeetingDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvItemMeetingSetting"
            android:background="@drawable/bg_immediate_bt"
            app:layout_widthPercent="15%"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:id="@+id/tvItemMeetingImmateStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即召开"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvItemMeetingDelete"
            android:background="@drawable/bg_template_immlate_start_bt"
            app:layout_widthPercent="20%"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:id="@+id/tvItemMeetingReservationStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约召开"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvItemMeetingImmateStart"
            android:background="@drawable/bg_template_reservation_start_bt"
            app:layout_widthPercent="20%"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginLeft="6dp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>